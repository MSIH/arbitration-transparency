---
layout: null
---
<!-- Gather unique tags from articles --> 
{% assign tags_posts = site.posts | map: 'tags' | join: ',' | join: ',' | split: ',' | uniq | sort %} 
<h2>Article tags: {{ tags_posts | join: "," | prepend: "[" | append: "]" }}</h2> 

<!-- Gather unique tags from tutorials --> 
{% assign tags_pages = site.pages | map: 'tags' | join: ',' | join: ',' | split: ',' | uniq | sort %} 
<h2>Tutorial tags: {{ tags_pages | join: "," | prepend: "[" | append: "]" }}</h2> 
<!-- Combine and leave unique only --> 
{% assign combo = tags_posts | concat: tags_pages | uniq | sort %} 
<h2>Combo: {{ combo | join: "," | prepend: "[" | append: "]" }}</h2>


[
    {% for tag in combo %}
    {"label": "{{tag}}",
    "value": "{{tag}}"}
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
    ]

  
